@page "{Tag?}"
@using EtAndHkIde.ViewComponents
@model EtAndHkIde.Pages.TagsModel
@{
    Layout = "Shared/_NoSidebarLayout";
    ViewData["Title"] = "Pages by tag";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="list-group">
                @foreach (var tag in Model.Tags)
                {
                    var pageCount = 0;
                    if (Model.PagesByTag.TryGetValue(tag, out var pageMetadatas))
                    {
                        pageCount = pageMetadatas.Count();
                    }
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(tag.NormalizedName == Model.Tag ? "active" : "")" data-toggle="list" href="#@tag.NormalizedName">
                        <span>
                            <i class="@tag.TagType.Icon tag-type mr-1"></i>@tag.Name
                        </span>
                        <span class="badge badge-primary badge-pill">@pageCount</span>
                    </a>
                }
            </div>
        </div>
        <div class="col-md-8">
            <div class="tab-content">
                @foreach (var tag in Model.Tags)
                {
                    <div class="tab-pane fade @(tag.NormalizedName == Model.Tag ? "active show" : "")" id="@tag.NormalizedName">
                        @if (Model.PagesByTag.TryGetValue(tag, out var pageMetadatas))
                        {
                            var model = new PageListCardViewModel(pageMetadatas);
                            <partial name="_PageListCard" model="model" />
                        }
                        else
                        {
                            <p>There are no pages with this tag.</p>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
