@page "{Tag?}"
@using EtAndHkIde.Infrastructure
@using EtAndHkIde.ViewComponents
@model EtAndHkIde.Pages.TagsModel
@{
    Layout = "Shared/_NavbarLayout";
    ViewData["Title"] = "Pages by tag";
}
<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="list-group">
                @for (var i = 0; i < Model.Tags.Count(); i++)
                {
                    var tag = Model.Tags.ElementAt(i);
                    var isActive = string.Equals(tag, Model.Tag, StringComparison.OrdinalIgnoreCase) ? "active" : "";

                    var pageCount = 0;
                    if (Model.PagesByTag.TryGetValue(tag, out var pageMetadatas))
                    {
                        pageCount = pageMetadatas.Count();
                    }
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @isActive" data-toggle="list" href="#tag-@i">
                        <span>
                            <i class="@Icons.ForTag(tag) mr-1"></i>@tag
                        </span>
                        <span class="badge badge-primary badge-pill">@pageCount</span>
                    </a>
                }
            </div>
        </div>
        <div class="col-md-8">
            <div class="tab-content">
                @for (var i = 0; i < Model.Tags.Count(); i++)
                {
                    var tag = Model.Tags.ElementAt(i);
                    var isActive = string.Equals(tag, Model.Tag, StringComparison.OrdinalIgnoreCase) ? "active show" : "";

                    <div class="tab-pane fade @isActive" id="tag-@i">
                        @if (Model.PagesByTag.TryGetValue(tag, out var pageMetadatas))
                        {
                            @*var model = new PageListCardViewModel(pageMetadatas);
                            <partial name="_PageListCard" model="model" />*@
                        }
                        else
                        {
                            <p>There are no pages with this tag.</p>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
