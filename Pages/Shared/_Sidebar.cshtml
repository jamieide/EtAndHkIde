@model PageMetadata
@{
    var citationIcons = new Dictionary<CitationType, string>
{
        {CitationType.Undefined, ""},
        {CitationType.Book, "<i class=\"fas fa-book mr-1\"></i>"},
        {CitationType.Magazine, "<i class=\"fas fa-book-open mr-1\"></i>"},
        {CitationType.Newspaper, "<i class=\"far fa-newspaper mr-1\"></i>"},
        {CitationType.Pdf, "<i class=\"fa fa-file-pdf mr-1\"></i>"},
        {CitationType.Website, "<i class=\"fas fa-external-link-square-alt mr-1\"></i>"}
    };
}

<div class="card">
    <div class="card-body">
        <p class="card-text">
            @Model.Description
        </p>
        <p class="card-text">
            <span class="text-muted mr-2">Published</span>
            @if (Model.PublishDate.HasValue)
            {
                @Model.PublishDate.Value.ToShortDateString();
            }
            else
            {
                <span class="badge badge-warning">DRAFT</span>
            }
        </p>
        @if (Model.Citation != null)
        {
            <p class="card-text">
                @if (Model.Citation.Url.HasValue())
                {
                    <a href="@Html.Raw(Model.Citation.Url)" target="_blank">
                        @Html.Raw(citationIcons[Model.Citation.Type]) @Html.Raw(@Model.Citation.Name)
                    </a>
                }
                else
                {
                    @Html.Raw(citationIcons[Model.Citation.Type]) @Model.Citation.Name
                }
                @if (Model.Citation.Description.HasValue())
                {
                    <br />
                    @Model.Citation.Description
                }
            </p>
        }
        @if (Model.Tags.Any())
        {
            <div class="mt-3">
                <a href="#tags" data-toggle="collapse" title="click to show/hide tags"><i class="fas fa-tag mr-2"></i>Tags</a>
            </div>
            <div id="tags" class="collapse">
                <ul class="list-group list-group-flush">
                    @foreach (var tag in Model.Tags)
                    {
                        <li class="list-group-item list-group-item-action">
                            <a asp-page="/Tags" asp-route-tag="@tag">@tag</a>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>

