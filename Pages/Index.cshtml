@page
@{
    Layout = "Shared/_BaseLayout";
    ViewData["Title"] = "Index";
}
@section Head
    {
    <style>
        body {
            background-color: gainsboro;
        }

        div#logo {
            margin-top: 20px;
            background-color: black;
        }

            div#logo img {
                display: block;
                margin: auto;
            }

    </style>
}
<div id="logo">
    <img src="~/images/logo.png" />
</div>
<div id="banner" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block img-fluid w-100" src="~/images/banner1.jpg" />
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid w-100" src="~/images/banner2.jpg" />
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid w-100" src="images/banner3.jpg" />
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <h2>New Articles</h2>
            <vc:page-list recent-count="20"></vc:page-list>
        </div>
        <div class="col"></div>
        <div class="col"></div>
    </div>
</div>
