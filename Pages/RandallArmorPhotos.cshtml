@page
@model RandallArmorPhotosModel
@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<div id="randall-armor" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li class="active" data-target="#randall-armor" data-slide-to="0"></li>
        <li data-target="#randall-armor" data-slide-to="1"></li>
        <li data-target="#randall-armor" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="content/RandallArmor/armor_101231-6151.jpg" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="content/RandallArmor/armor_101231-6230.jpg" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="content/RandallArmor/armor_101231-6243.jpg"/>
        </div>
    </div>
    <a class="carousel-control-prev" href="#randall-armor" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#randall-armor" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

<div class="alert alert-info mt-2">
    Photographs courtesy of <a href="http://www.armorfoto.com">Randall Armor</a> &copy; 2013
</div>