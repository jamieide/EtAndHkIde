@model EtAndHkIde.Models.ImageCollection
@{
    var carouselId = $"{Model.Name.ToLowerInvariant().Replace(" ", "")}-carousel";
    var imageCount = Model.Images.Length;
}

<div id="@carouselId" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (var i = 0; i < imageCount; i++)
        {
            <li data-target="#@carouselId" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>
    <div class="carousel-inner">
        @for (var i = 0; i < imageCount; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img class="d-block img-fluid w-100" src="~/content/@Model.Images[i].Path" />
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#@carouselId" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#@carouselId" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>
